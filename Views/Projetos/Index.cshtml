@{
    ViewData["Title"] = "Projetos";
}

<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Meus Projetos</title>

</head>
<body>

    <div style="text-align: center;">
        <a href="https://github.com/lucasvaz-net">
            <img height="180" src="https://github-readme-stats.vercel.app/api?username=lucasvaz-net&show_icons=true&theme=dark&include_all_comits=true&count_private=true" />
            <img height="180" src="https://github-readme-stats.vercel.app/api/top-langs/?username=lucasvaz-net&layout=compact&langs_count=16&theme=dark" />
        </a>
    </div>


    <div class="container mt-4">
        <div class="row">
            @foreach (var proj in Model)
            {
                <div class="col-md-6 col-lg-4 mt-4">
                    <div class="card">
                        <h3>@proj.nome</h3>
                        <p>@proj.descricao</p>


                        <p align="left">
                            @foreach (var tecnologia in proj.tecnologias)
                            {
                                <img src="~/@tecnologia" alt="@tecnologia" width="40" height="40" />
                            }
                        </p>


                        <div class="button-container">
                            @if (!string.IsNullOrEmpty(proj.linkgithub))
                            {
                                <a href="@proj.linkgithub" target="_blank" class="btn btn-block transparent-button" type="button">
                                    <img src="~/github.png" width="30px" height="30px"> Ver no Github
                                </a>
                            }
                            else
                            {
                                <button class="btn btn-block transparent-button" type="button">Indisponível</button>
                            }

                            @if (!string.IsNullOrEmpty(proj.linkweb))
                            {
                                <a href="@proj.linkweb" target="_blank" class="btn btn-block transparent-button" type="button">
                                    <img src="~/link-conectado.png" width="34px" height="30px"> Ver na Web
                                </a>
                            }
                            <!-- Exibir os ícones das tecnologias associadas ao projeto -->
                         
                        </div>
                        @if (!string.IsNullOrEmpty(proj.login) && !string.IsNullOrEmpty(proj.senha))
                        {
                            <small style="color:azure; font-weight: bold;">Login: @proj.login Senha: @proj.senha</small>
                        }
                    </div>
                </div>
            }
        </div>
    </div>

    <div id="button-containersobremim">
        <a asp-controller="Habilidades" asp-action="Index" class="transparent-button">Vamos Continuar</a>
        <br />
        <br />
        <br />
    </div>
</body>
</html>
